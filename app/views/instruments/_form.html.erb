<div class="columns">
  <div class="column is-8 is-centered">

    <%= simple_form_for @instrument, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

        <div class="columns">

          <div class="field column is-9">
            <div class="control">
              <%= f.input :title, required: true, input_html: { class: "input" }, wrapper: false, label: "Título" %>
            </div>
          </div>

          <div class="field column">
            <div class="control">
              <%= f.input :price, required: true, input_html: { class: "input", maxlength: 7 }, wrapper: false, label: "Preço" %>
            </div>
          </div>

          </div>

          <div class="field">
            <div class="control">
              <%= f.input :model, required: true, input_html: { class: "input" }, wrapper: false, label: "Modelo" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :description, required: true, input_html: { class: "textarea" }, wrapper: false, label: "Descrição" %>
            </div>
          </div>

        <div class="columns">
          <div class="field column is-4">
            <div class="control">
              <label class="label">Marca</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :brand, collection: Instrument::BRAND, prompt: "Selecione a marca" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-tag"></i>
                </span>
              </div>
            </div>
           </div>

          <div class="field column is-4">
            <div class="control">
              <label class="label">Acabamento</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :finish, collection: Instrument::FINISH, prompt: "Selecione o acabamento" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-paint-brush"></i>
                </span>
              </div>
            </div>
           </div>

          <div class="field column is-4">
            <div class="control">
              <label class="label">Condição</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :condition, collection: Instrument::CONDITION, prompt: "Selecione a condição" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-paint-brush"></i>
                </span>
              </div>
            </div>
           </div>
         </div>

        <div class="field">
          <div class="control">
            <label class="label">Adicionar imagens</label>
              <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class: "file-input instrument-image" }, label: false, wrapper: false %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-upload"></i></span>
                    <span class="file-label">Escolha um arquivo...</span>
                  </span>
              </label>
              </div>
            </div>
          </div>
          <output id="list"></output>
        <hr />

        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, "Editar instrumento", class: "button is-warning" %>
            <%= link_to "Cancelar", instruments_path, class: "button is-light" %>
          </div>
        </div>

      <% end %>
  </div>
</div>
