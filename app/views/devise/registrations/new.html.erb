<div class="login-form">
  <h2 class="login-title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <strong><%= f.label :name %></strong>
      <%= f.text_field :name, required: true, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <strong><%= f.label :email %></strong>
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <strong><%= f.label :password %></strong>
      <%= f.password_field :password, required: true, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <p class="hint"><%= "Minimum #{@minimum_password_length} characters" %></p>
      <% end %>
    </div>

    <div class="field">
      <strong><%= f.label :password_confirmation %></strong>
      <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>


