<% content_for :body_class, 'background-primary' %>

<div class="login-form">
  <h2 class="login-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <strong><%= f.label :email %></strong>
      <%= f.email_field :email, required: false, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <strong><%= f.label :password %></strong>
      <%= f.password_field :password, required: false, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
